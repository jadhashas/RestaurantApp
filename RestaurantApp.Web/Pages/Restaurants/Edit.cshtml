@page
@model EditModel

<h1 class="text-2xl font-bold mb-4 text-gray-800">Modifier le restaurant</h1>

<form method="post" enctype="multipart/form-data" class="bg-white p-6 rounded shadow-md space-y-4">
    <partial name="_Form" for="Restaurant" />
    <button type="submit"
            class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-2 px-4 rounded shadow">
        Mettre à jour
    </button>
    <a asp-page="Index" class="text-gray-600 hover:underline">Retour à la liste</a>
</form>
