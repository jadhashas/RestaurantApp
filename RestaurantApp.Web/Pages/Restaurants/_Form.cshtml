@model RestaurantApp.Application.ViewModels.RestaurantViewModel

<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm p-8">
        <div class="space-y-6">
            <div>
                <label asp-for="Nom" class="block text-sm font-medium text-gray-700">Nom</label>
                <input asp-for="Nom" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500" />
                <span asp-validation-for="Nom" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Adresse" class="block text-sm font-medium text-gray-700">Adresse</label>
                <input asp-for="Adresse" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500" />
                <span asp-validation-for="Adresse" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Cuisine" class="block text-sm font-medium text-gray-700">Cuisine</label>
                <input asp-for="Cuisine" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500" />
                <span asp-validation-for="Cuisine" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label asp-for="Note" class="block text-sm font-medium text-gray-700">Note</label>
                <input asp-for="Note" type="number" step="0.1" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500" />
                <span asp-validation-for="Note" class="text-red-600 text-sm"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700">Image</label>
                <input type="file" name="Image" class="mt-1 block w-full text-sm text-gray-700 border border-gray-300 rounded-md shadow-sm focus:border-amber-500 focus:ring-amber-500" />
            </div>

            <div class="flex justify-end space-x-4">
                <a asp-page="Index" class="px-4 py-2 text-gray-600 hover:text-gray-800">
                    <i class="fas fa-times mr-2"></i>Annuler
                </a>
                <button type="submit" class="px-4 py-2 bg-amber-600 text-white rounded-md hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2">
                    <i class="fas fa-save mr-2"></i>Enregistrer
                </button>
            </div>
        </div>
    </div>
</div>
