<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantApp</title>
    <link href="~/css/output.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body class="bg-gray-50 text-gray-800 font-sans">
    <header class="bg-white shadow-sm fixed w-full top-0 z-50">
        <div class="container mx-auto px-6 py-4">
            <div class="flex justify-between items-center">
                <a class="text-2xl font-serif text-gray-800 hover:text-amber-600 transition-colors" asp-area="" asp-page="/Index">
                    <span class="text-amber-600">🍽️</span> RestaurantApp
                </a>
                <nav class="hidden md:flex space-x-8">
                    <a class="text-gray-600 hover:text-amber-600 transition-colors" asp-area="" asp-page="/Index">
                        <i class="fas fa-home mr-2"></i>Accueil
                    </a>
                    <a class="text-gray-600 hover:text-amber-600 transition-colors" asp-area="" asp-page="/Restaurants/Index">
                        <i class="fas fa-utensils mr-2"></i>Restaurants
                    </a>
                    <a class="text-gray-600 hover:text-amber-600 transition-colors" asp-area="" asp-page="/Privacy">
                        <i class="fas fa-shield-alt mr-2"></i>Confidentialité
                    </a>
                </nav>
                <button class="md:hidden text-gray-600" onclick="toggleMobileMenu()">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>
            <!-- Menu mobile -->
            <div id="mobileMenu" class="hidden md:hidden mt-4">
                <nav class="flex flex-col space-y-4">
                    <a class="text-gray-600 hover:text-amber-600 transition-colors" asp-area="" asp-page="/Index">
                        <i class="fas fa-home mr-2"></i>Accueil
                    </a>
                    <a class="text-gray-600 hover:text-amber-600 transition-colors" asp-area="" asp-page="/Restaurants/Index">
                        <i class="fas fa-utensils mr-2"></i>Restaurants
                    </a>
                    <a class="text-gray-600 hover:text-amber-600 transition-colors" asp-area="" asp-page="/Privacy">
                        <i class="fas fa-shield-alt mr-2"></i>Confidentialité
                    </a>
                </nav>
            </div>
        </div>
    </header>

    <main class="container mx-auto px-6 pt-24">
        @RenderBody()
    </main>

    <footer class="bg-gray-900 text-gray-300 py-12 mt-12">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-xl font-serif mb-4">RestaurantApp</h3>
                    <p class="text-gray-400">Découvrez les meilleures tables de votre ville.</p>
                </div>
                <div>
                    <h3 class="text-xl font-serif mb-4">Liens Rapides</h3>
                    <ul class="space-y-2">
                        <li>
                            <a href="/" class="hover:text-amber-400 transition-colors">
                                <i class="fas fa-home mr-2"></i>Accueil
                            </a>
                        </li>
                        <li>
                            <a href="/Restaurants" class="hover:text-amber-400 transition-colors">
                                <i class="fas fa-utensils mr-2"></i>Restaurants
                            </a>
                        </li>
                        <li>
                            <a href="/Privacy" class="hover:text-amber-400 transition-colors">
                                <i class="fas fa-shield-alt mr-2"></i>Confidentialité
                            </a>
                        </li>
                    </ul>
                </div>
                <div>
                    <h3 class="text-xl font-serif mb-4">Contact</h3>
                    <p class="text-gray-400">
                        <i class="fas fa-envelope mr-2"></i>
                        Email: contact@restaurantapp.com
                    </p>
                    <p class="text-gray-400">
                        <i class="fas fa-phone mr-2"></i>
                        Tél: +33 1 23 45 67 89
                    </p>
                </div>
            </div>
            <div class="border-t border-gray-800 mt-8 pt-8 text-center">
                <p>&copy; 2025 - RestaurantApp.Web - Tous droits réservés</p>
            </div>
        </div>
    </footer>

    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
